@model IoT.Models.Login

<form action="/Gas/GasMeasure" method="post">
    <div class="imgcontainer">
        <img src="~/img/imar.png" alt="Avatar" class="avatar">
    </div>
     
    <div class="container">
        <div class="container" style="max-width: 300px">
            <label for="uname">
                <b>Username</b>
            </label>
            <br />
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", required = "required" })
            <br />
            <label for="psw">
                <b>Password</b>
            </label>
            <br />
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required" })

            <button type="submit" style="width:100%">Login</button>
        </div>
    </div>
</form>